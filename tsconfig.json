{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": false,
    "target": "ESNext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
